<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/numbertext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintVertical_bias="0.15"
        android:paddingBottom="5dp"
        android:textSize="50px"
        android:letterSpacing="0.15"
        android:textColor="@color/colorAccent2"
        android:textAlignment="center"
        android:background="@drawable/numbertext"
        android:text="010454565842"/>

    <com.davidmiguel.numberkeyboard.NumberKeyboard
        android:id="@+id/numberkeyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/numbertext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="h,1:1.45"
        app:layout_constraintVertical_bias="0.1"
        keyboard:numberkeyboard_numberKeyBackground="@drawable/numbershape"
        keyboard:numberkeyboard_numberKeyTextColor="@color/colorAccent2"
        keyboard:numberkeyboard_rightAuxBtnIcon = "@drawable/ic_backspace_black_24dp"
        keyboard:numberkeyboard_keyboardType="integer"/>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomnavigationmenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:mbn_selectedIconColor="@color/colorAccent2" />

</androidx.constraintlayout.widget.ConstraintLayout>