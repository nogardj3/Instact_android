<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contacts_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/showevents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="@null"
            android:text="@string/contacts_item_add_name"
            android:textColor="@color/toolbarText"
            android:textSize="14sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/contacts_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/contacts_addname"
        app:layout_constraintDimensionRatio="width,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_toolbar"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintWidth_percent="0.3"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contacts_addname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/contacts_addphone_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_image"
        android:text="@string/contacts_addname"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contacts_addphone_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/contacts_addphone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_addname"
        android:text="@string/contacts_addphone_label" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/contacts_addphone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:inputType="phone"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/contacts_addduration_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_addphone_label"
        android:hint="@string/contacts_addphone_hint" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contacts_addduration_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/contacts_addduration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_addphone"
        android:text="@string/contacts_addduration_label" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/contacts_addduration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/contacts_memo_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_addduration_label"
        android:hint="@string/contacts_addduration_hint" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contacts_memo_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/contacts_memo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_addduration"
        android:text="@string/contacts_addmemo_label" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/contacts_memo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:singleLine="true"
        android:hint="@string/contacts_addmemo_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contacts_memo_label" />

</androidx.constraintlayout.widget.ConstraintLayout>